# ==============================================================================
# CONFIGURACIÓN DE LA ORGANIZACIÓN
# ==============================================================================
[ORGANIZATION]
# Nombre de la organización
ORG_NAME=Prefectura Ciudadana del Guayas

# Nombre del responsable o gerente
ORG_MANAGER=Marcela Aguiñaga

# Dirección física de la organización
ORG_ADDRESS=Malecón 108 e Illinworth

# Fecha de inicio de gestión (formato: DD/MM/YYYY)
ORG_INICIOGESTION='14/05/2023'

paramete1r=.env

# ==============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================================================
[APP]
# Título que aparecerá en la interfaz
APP_TITLE="Sistema Gestión de Información"

# Nombre interno de la aplicación
APP_NAME=Servicio/API

# Ambiente: local, development, staging, production
APP_ENV=local

# Clave de encriptación principal (32 caracteres hexadecimales)
# CAMBIAR EN PRODUCCIÓN - Generar con: openssl rand -hex 16
APP_KEY=CAMBIAR_EN_PRODUCCION_32_CHARS

# Primera clave para encriptación adicional (base64)
# Generar con: openssl rand -base64 32
APP_FIRSTKEY="CAMBIAR_PRIMERA_CLAVE_BASE64"

# Segunda clave para encriptación adicional (base64)
# Generar con: openssl rand -base64 64
APP_SECONDKEY="CAMBIAR_SEGUNDA_CLAVE_BASE64"

# Mostrar errores detallados (true solo en desarrollo)
APP_DEBUG=true

# Dominio y puerto donde corre la aplicación
APP_DOMAIN=localhost:83

# URL completa de la aplicación
APP_URL=http://localhost:83

# Zona horaria (ver: https://www.php.net/manual/es/timezones.php)
APP_TIMEZONE=America/Guayaquil

# Codificación de caracteres
APP_CHARSET=UTF-8

# Ruta al certificado SSL (si usa HTTPS)
APP_PATH_SSL="/opt/ssl/guayas.gob.ec.pem"

# URL del panel de administración
APP_ADMIN_URL=http://localhost:83/tableroAdmin.php

# Email del administrador del sistema
APP_ADMIN_MAIL=admin.servicio@guayas.gob.ec

# Nombre del administrador
APP_ADMIN_NAME=Administrador de Servicio Ciudadano

# Carpeta para archivos temporales
APP_PATHTMP=tmp

# Carpeta para archivos de log
APP_PATHLOG=logs

# Logo que aparece en la pantalla de login
APP_LOGO_LOGIN=img/guayas_logo_transparente.png

# Avatar por defecto para usuarios
APP_AVATARUSER="./img/avatarUsuario.jpg"

# Mostrar errores en pantalla (0=no, 1=sí) - usar 0 en producción
APP_DISPLAYERROR=0

# Guardar errores en archivo log (0=no, 1=sí)
APP_LOGERRORS=1

# Tiempo máximo de sesión en minutos
APP_MAXTIME=60

# ==============================================================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ==============================================================================
[MAIL]
# Token de autenticación para el servicio de correo
# Solicitar al equipo de infraestructura
MAIL_TOKEN=CAMBIAR_TOKEN_AQUI

# URL del servicio de correo web
MAIL_URL=https://ws.guayas.gob.ec/public/mail

# Email del operador o responsable técnico
MAIL_OPERADOR=luis.constante@guayas.gob.ec

# ==============================================================================
# CONFIGURACIÓN LDAP/ACTIVE DIRECTORY
# ==============================================================================
[LDAP]
# Servidor LDAP/Active Directory
LDAP_HOST=ninobravo.guayas.gov.ec

# Puerto LDAP (389 para no cifrado, 636 para LDAPS)
LDAP_PORT=389

# Dominio del Active Directory
LDAP_DOMAIN=guayas.gov.ec

# Token de autenticación para LDAP
# Solicitar al equipo de TI
LDAP_LTOKEN=CAMBIAR_LDAP_TOKEN

# ==============================================================================
# CONFIGURACIÓN ESPECÍFICA - GESTIÓN DE INFORMACIÓN
# ==============================================================================
[GESTION_INFORMACION]
# ID del estado "Confirmación Sí" en la base de datos
CONFIRMACION_SI=191

# ID del estado "Confirmación No" en la base de datos
CONFIRMACION_NO=193

# Listar eventos de los últimos X días (0 = todos)
EVENTOS_APARTIR_DE=0

# Listar eventos previos de los últimos X días
EVENTOS_PREV_APARTIR_DE=1000

# ==============================================================================
# CONFIGURACIÓN DE REDIS (Cache)
# ==============================================================================
[REDIS]
# Host del servidor Redis (nombre del contenedor Docker o IP)
REDIS_HOST=ramdb

# Puerto de Redis
REDIS_PORT=6379

# Contraseña de Redis (cambiar en producción)
REDIS_PASSWORD=CAMBIAR_PASSWORD_REDIS

# ==============================================================================
# CONFIGURACIÓN DE DEBUG Y MONITOREO
# ==============================================================================
[DEBUG]
# Activar modo debug (true/false)
debug_mode=true

# Usar manejador de errores personalizado
custom_error_handler=true

# Probar conexiones al iniciar la aplicación
test_connections_on_startup=false

# Formato de respuesta de errores (json/html)
error_response_format=json

# Monitoreo de rendimiento
performance_monitoring=true

[PERFORMANCE]
# Umbral en segundos para consultas lentas
slow_threshold=0.5

[SECURITY]
# Habilitar logging de seguridad
enable_logging=true
log_security_events=true

# Ruta para logs de seguridad
security_log_path=logs

# Habilitar logging por lotes (mejor rendimiento)
enable_batch_logging=true

# ==============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================================================
[DATABASE]
# Tipo de base de datos principal: oracle, mysql, postgresql, sqlserver
db_type=oracle

# Ruta para logs de base de datos
DB_PATHLOG=logs

# Registrar todas las consultas SQL (solo desarrollo)
DB_LOG_QUERIES=true

# ==============================================================================
# ORACLE DATABASE
# ==============================================================================
[ORACLE]
# Host del servidor Oracle
db_host=10.100.2.226

# Puerto (1521 es el predeterminado, 7000 personalizado)
db_port=7000

# Nombre de la base de datos o SID
db_database=ADMIN

# Usuario de base de datos
db_user=web

# Contraseña (CAMBIAR EN PRODUCCIÓN)
db_password=CAMBIAR_PASSWORD_ORACLE

# Conjunto de caracteres
db_charset=AL32UTF8

# Formato de timestamp en Oracle
db_format_timestamp='DD/MM/YYYY HH24:MI:SS'
APP_FORMAT_DATE='d/m/Y'
APP_FORMAT_TIMESTAMP='d/m/Y H:i:s'

# ==============================================================================
# MYSQL/MARIADB DATABASE
# ==============================================================================
[MYSQL]
# Host del servidor MySQL
db_host=10.100.2.226

# Puerto (3306 es predeterminado, 5000 personalizado)
db_port=5000

# Nombre de la base de datos
db_database=sesion_consejo

# Usuario de base de datos
db_user=sa

# Contraseña (CAMBIAR EN PRODUCCIÓN)
db_password=CAMBIAR_PASSWORD_MYSQL

# Conjunto de caracteres
db_charset=utf8mb4

# Formato de timestamp en MySQL
db_format_timestamp='%Y-%m-%d %H:%i:%s'
APP_FORMAT_DATE=Y-m-d
APP_FORMAT_TIMESTAMP='Y/m/d H:i:s'

# ==============================================================================
# POSTGRESQL DATABASE
# ==============================================================================
[POSTGRESQL]
# Host del servidor PostgreSQL
db_host=localhost

# Puerto (5432 es el predeterminado)
db_port=5432

# Nombre de la base de datos
db_database=mydatabase

# Usuario de base de datos
db_user=myuser

# Contraseña (CAMBIAR EN PRODUCCIÓN)
db_password=CAMBIAR_PASSWORD_POSTGRESQL

# Conjunto de caracteres
db_charset=UTF8

# ==============================================================================
# SQL SERVER DATABASE
# ==============================================================================
[SQLSERVER]
# Host del servidor SQL Server
db_host=localhost

# Puerto (1433 es el predeterminado)
db_port=1433

# Nombre de la base de datos
db_database=mydatabase

# Usuario de base de datos
db_user=myuser

# Contraseña (CAMBIAR EN PRODUCCIÓN)
db_password=CAMBIAR_PASSWORD_SQLSERVER

# Conjunto de caracteres
db_charset=UTF-8

# ==============================================================================
# COOKIES
# ==============================================================================
[COOKIES]
# Scripts adicionales para cookies (si aplica)
app_scripts=''

# ==============================================================================
# BIBLIOTECA VIRTUAL - GESTIÓN DE DOCUMENTOS
# ==============================================================================
[BIBLIOTECAVIRTUAL]
# Ruta absoluta a la carpeta de biblioteca virtual
# Windows: "D:/PHPCode/projects/sgi/bibliotecavirtual/"
# Linux: "/var/www/html/sgi/bibliotecavirtual/"
APP_RUTA_BIBLIOTECAVIRTUAL="/var/www/html/sgi/bibliotecavirtual/"

# Nombre de la carpeta para control de versiones
APP_RUTA_NOMBRE_CARPETA_VERSION="control_version"

# Extensiones de archivo permitidas (separadas por comas)
APP_ARCHIVOS_PERMITIDOS=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif,.xlsx,.xls,.csv,.mp3,.wav,.ogg,.zip,.rar"

# Tamaño máximo total de subida en MB
MAXIMO_TAMANIO_SUBIDA_BIBLIOTECAVIRTUAL=250

# Número máximo de archivos por subida
NUMERO_MAXIMO_ARCHIVO_X_SUBIDA_BIBLIOTECAVIRTUAL=100

# Tamaño máximo por archivo individual en MB
MAXIMO_TAMANIO_SUBIDA_X_ARHIVO_BIBLIOTECAVIRTUAL=100

# ==============================================================================
# DINARDAP - INTEGRACIÓN CON SERVICIOS DEL ESTADO
# ==============================================================================
[DINARDAP]
# URL del servicio DINARDAP
DINARDAP_URL=https://dinardap.guayas.gob.ec

# Código de aplicación asignado
# Solicitar al equipo de DINARDAP
DINARDAP_APLICACION=SGI-0001

# Contraseña de la aplicación (CAMBIAR EN PRODUCCIÓN)
DINARDAP_PASSWORDAPP=CAMBIAR_PASSWORD_DINARDAP
